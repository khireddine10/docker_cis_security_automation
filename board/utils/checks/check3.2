#!/bin/bash

echo " ******* 3.2 Ensure that docker.service file permissions are appropriately set (Automated) *******"


path=$(systemctl show -p FragmentPath docker.service | cut -d "=" -f 2)
str=$(stat -c %a $path)

if [ "$str" == "644" ] ; then printf "\033[1;32m [PASS] \033[0m\n" ; 
else printf "\033[1;31m [WARN] the file permissions must be set to 644. \033[0m\n";
fi