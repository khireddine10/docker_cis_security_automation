#!/bin/bash

echo " ******* 2.3 Ensure the logging level is set to 'info' (Automated) *******"

str1=$(ls /etc/docker | grep daemon);
if [ -z "$str1" ] ; then printf "\033[1;34m [INFO] The daemon server isn't configured \033[0m\n";
else
    str2=$(grep "log-level" /etc/docker/daemon.json | cut -d ' ' -f 2);
    if [ "$str2" == "info" ] ; then printf "\033[1;32m [PASS] \033[0m\n" ; 
    else printf "\033[1;31m [WARN] --log-level must be set up to info \033[0m\n";
    fi
fi